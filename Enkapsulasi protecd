<?php

//class hewan
class hewan{
      //menentukan property dengan protected
      protected $nama = "kucing";
      
      //method protected
      protected function nama() {
          return " Nama hewan" .$this->nama; 
      
      }
      
      public function tampilkan_nama() {
           return $this->tampilkan_nama;
      }
      
}

//instansiasi class hewan
$hewan = new hewan() ;

//memanggil method public tampilkan_nama dari class hewan
echo $hewan->tampilkan_nama() ;
